{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "src",
    "outDir": "dist",
    "pretty": true,
    "noImplicitUseStrict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "typeRoots": ["@types"]
  },
  "exclude": ["node_modules", "dist", "example"]
}
